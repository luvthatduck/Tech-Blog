<article>
      <div class="post">
        <a href="/post/{{id}}">{{title}}</a>
        <span>({{format_url post_url}})</span>
      </div>
      <div class="post-text">

        {{body}}

      </div>
      <div class="post-user">
       By {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
