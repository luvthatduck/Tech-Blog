<div class="card">
<div class="card-body">
    <section>
        <h2>Share Something</h2>

        <form class="new-post-form">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" class="form-control" name="post-title" />
            </div>
            <div>
                <label for="post-body">Post Body</label>
                <input type="text" id="post-body" class="form-control post-body" name="post-body" />
            </div>
            <div>
                <label for="post-url">Link</label>
                <input id="post-url" class="form-control" name="post-url" />
            </div>
            <button type="submit button" class="login btn btn-primary">Create</button>
        </form>
    </section>
    </div> 
</div>


{{#if posts.length}}
<div class="container">
    <section>
        <h2>Your Posts</h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
        </ol>
    </section>
</div>
{{/if}}
<script src="/javascript/create-post.js"></script>